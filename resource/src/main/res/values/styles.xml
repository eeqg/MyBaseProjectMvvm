<resources>
	
	<!-- Base application theme. -->
	<style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="android:textAllCaps">false</item>
		<item name="android:windowActionBar">false</item>
		<item name="windowActionBar">false</item>
		<!--<item name="android:windowAnimationStyle">@style/AnimationActivity</item>-->
		<item name="windowNoTitle">true</item>
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowBackground">@drawable/bg_window</item>
		
		<item name="toolbarBackground">@color/colorPrimary</item>
		<item name="toolbarTitleTextColor">@android:color/white</item>
		<item name="toolbarTitleTextSize">@dimen/dimenTextAccent</item>
		<item name="toolbarBackImage">@mipmap/ic_back_white</item>
		<item name="toolbarActionTextColor">@color/colorTextAccent</item>
		<item name="toolbarActionTextSize">@dimen/dimenTextPrimary</item>
		<item name="colorThemeAccent">@color/colorThemeAccent</item>
		<item name="colorThemePrimary">@color/colorThemePrimary</item>
		<item name="colorThemeAssisted">@color/colorThemeAssisted</item>
		<item name="colorThemeDivider">@color/colorThemeDivider</item>
		<item name="colorTextAccent">@color/colorTextAccent</item>
		<item name="colorTextPrimary">@color/colorTextPrimary</item>
		<item name="colorTextSecondary">@color/colorTextSecondary</item>
		<item name="colorTextAssisted">@color/colorTextAssisted</item>
		<item name="actionBarSize">46dp</item>
	</style>
	
	<style name="ViewDividerVertical">
		<item name="android:layout_width">@dimen/dimenThemeDivider</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:background">@color/colorThemeDivider</item>
	</style>
	
	<style name="ViewDividerHorizontal">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/dimenThemeDivider</item>
		<item name="android:background">@color/colorThemeDivider</item>
	</style>
	
	<style name="DialogLoadingTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="android:windowBackground">@drawable/bg_loading_dialog</item>
	</style>
	
	<style name="DialogTransparentTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowFrame">@android:color/transparent</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowIsTranslucent">false</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowContentOverlay">@android:color/transparent</item>
	</style>
	
	<style name="DialogTransparentTheme.Bottom">
		<item name="android:windowAnimationStyle">@style/AnimationBottom</item>
	</style>
	
	<style name="AnimationBottom" parent="@android:style/Animation.Dialog">
		<item name="android:windowEnterAnimation">@anim/enter_from_bottom</item>
		<item name="android:windowExitAnimation">@anim/exit_from_bottom</item>
	</style>
</resources>
